<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_linear"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_const"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <ImageView
            android:id="@+id/image_empty_weather"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:scaleType="center"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_airStatus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintVertical_bias="0.07"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/txt_pmGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- --"
            android:textSize="6pt"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.06"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/txt_pmValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- --"
            android:textSize="4pt"
            android:textAlignment="textStart"
            app:layout_constraintVertical_bias="0.17"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Wait"
            android:textSize="6pt"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Wait"
            android:textSize="4pt"
            android:textAlignment="textEnd"
            app:layout_constraintVertical_bias="0.17"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <ImageView
            android:id="@+id/img_sky"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintHorizontal_bias="0.1"
            android:src="@drawable/ic_question"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/text_sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="6pt"
            android:textStyle="bold"
            android:text="  -- --  "
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toBottomOf="@+id/img_sky" />

        <ImageView
            android:id="@+id/img_wind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintHorizontal_bias="0.5"
            android:src="@drawable/ic_anemometer"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/text_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="6pt"
            android:textStyle="bold"
            android:text="  -- --  "
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toBottomOf="@+id/img_wind" />

        <ImageView
            android:id="@+id/img_humidity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintHorizontal_bias="0.9"
            android:src="@drawable/ic_humidity"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            />

        <TextView
            android:id="@+id/text_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="6pt"
            android:textStyle="bold"
            android:text="  -- --  "
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toBottomOf="@+id/img_humidity" />

        <ImageButton
            android:id="@+id/btn_weatherRefresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_refresh2"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintVertical_bias="0.93"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather" />

        <TextView
            android:id="@+id/text_fcstTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="166dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="4pt"
            app:layout_constraintBottom_toBottomOf="@+id/image_empty_weather"
            app:layout_constraintEnd_toEndOf="@+id/image_empty_weather"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/image_empty_weather"
            app:layout_constraintTop_toTopOf="@+id/image_empty_weather"
            app:layout_constraintVertical_bias="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <Button
            android:id="@+id/btn_kbs_classic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/layout_radio"
            />

        <Button
            android:id="@+id/btn_kbs_cool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_kbs_classic"
            />

        <Button
            android:id="@+id/btn_kbs_happy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_kbs_cool"
            />

        <Button
            android:id="@+id/btn_kbs_1_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_kbs_happy"
            />

        <Button
            android:id="@+id/btn_sbs_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_kbs_1_radio"
            />

        <Button
            android:id="@+id/btn_sbs_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_sbs_love"
            />

        <Button
            android:id="@+id/btn_mbc_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_sbs_power"
            />

        <Button
            android:id="@+id/btn_mbc_fm_foru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_mbc_s"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>